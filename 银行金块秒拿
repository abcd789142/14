local targetSize = Vector3.new(1.5489946603775024, 0.44394999742507935, 0.8339812755584717)
local tolerance = 0.001  -- 允许的误差范围
local itemPickupFolder = workspace.Game.Entities.ItemPickup

for _, obj in ipairs(itemPickupFolder:GetDescendants()) do
    local sizeToCheck = nil
    
    if obj:IsA("Model") and obj.PrimaryPart then
        sizeToCheck = obj.PrimaryPart.Size
    elseif obj:IsA("BasePart") then
        sizeToCheck = obj.Size
    end

    -- 近似匹配大小
    if sizeToCheck and (sizeToCheck - targetSize).Magnitude < tolerance then
        for _, child in ipairs(obj:GetDescendants()) do
            if child:IsA("ProximityPrompt") then
                child.HoldDuration = 0  -- 移除按住时间
                -- child.Cooldown = 0  -- ⚠ 错误：ProximityPrompt 没有这个属性！
            end
        end
    end
end
